{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "gameservice": {
        "ClusterId": "gameservice",
        "Match": {
          "Path": "/api/gameservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/gameservice"
          }
        ]
      },
      "recyclerservice": {
        "ClusterId": "recyclerservice",
        "Match": {
          "Path": "/api/recyclerservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/recyclerservice"
          }
        ]
      },
      "truckservice": {
        "ClusterId": "truckservice",
        "Match": {
          "Path": "/api/truckservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/truckservice"
          }
        ]
      },
      "headquartersservice": {
        "ClusterId": "headquartersservice",
        "Match": {
          "Path": "/api/headquartersservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/headquartersservice"
          }
        ]
      },
      "recyclingplantservice": {
        "ClusterId": "recyclingplantservice",
        "Match": {
          "Path": "/api/recyclingplantservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/recyclingplantservice"
          }
        ]
      }
    },
    "Clusters": {
      "gameservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://gameservice:80"
          }
        }
      },
      "recyclerservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://recyclerservice:80"
          }
        }
      },
      "truckservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://truckservice:80"
          }
        }
      },
      "headquartersservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://headquartersservice:80"
          }
        }
      },
      "recyclingplantservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://recyclingplantservice:80"
          }
        }
      }
    }
  },
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  "RabbitMQ": {
    "Host": "rabbitmq",
    "Username": "guest",
    "Password": "guest"
  },
  "OTEL_EXPORTER_JAEGER_ENDPOINT": "http://jaeger:14268/api/traces",
  "OTEL_SERVICE_NAME": "ApiGateway",
  "OTEL_TRACES_EXPORTER": "jaeger",
  "Jwt": {
    "Issuer": "https://localhost:5000",
    "Audience": "bottlegame",
    "Authority": "https://localhost:5000"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/api/health",
      "get:/health"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 100
      }
    ]
  }
}